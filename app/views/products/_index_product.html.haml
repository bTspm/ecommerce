.row
  .col-md-3
    %a.img-wrap{href: "#"}
      %img{src: product.cover_image}

  .col-lg-7.col-md-6.p-3
    %h5=link_to(product.title, product_path(id: product.id), class: "title")
    .mt-2.text-muted.text-justify= sanitize product.description

  .col-lg-2.col-md-3.col-sm-6.d-flex.flex-column
    .info-aside
      %span.font-weight-bold Discount:
      %span 80%

      -if product.coupon_code.present?
        %span.font-weight-bold Coupon:
        %code= product.coupon_code

      .mt-3.mb-3
        -if product.affiliate_link.present?
          = link_to("Get It Now", product.affiliate_link, class: "btn btn-secondary btn-block", target: "_blank")

      = render partial: "social_icons"

      .mt-auto
        abc