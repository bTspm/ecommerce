.container
  -@products.each_slice(3).each do |product_slice|
    .card-deck
      -product_slice.each do |product|
        .card.product-a
          .card-body
            .card-title= product.title
            %img.card-img.img-fluid{src: product.cover_image}
            %p.card-text.text-muted= product.description
          .card-footer
            .row
              .col-sm
                - if product.affiliate_link.present?
                  -link_name_with_icon = fontawesome_icon("fas fa-shopping-cart mr-2", "Buy Now")
                  = link_to(link_name_with_icon, product.affiliate_link, class: "btn btn-sm btn-success text-center", target: "_blank")
              .col-sm.text-right
                - if product.coupon_code.present?
                  = link_to("Show Coupon", product.coupon_code, class: "btn btn-sm btn-success text-center", target: "_blank")